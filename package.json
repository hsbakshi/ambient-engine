{
  "name": "hybrid-ambient",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install:all": "npm install",
    "build:engine": "npm run build --workspace=packages/audio-engine",
    "build:web": "npm run build --workspace=packages/web",
    "build": "npm run build:engine && npm run build:web",
    "dev:web": "npm run dev --workspace=packages/web",
    "dev:mobile": "npm start --workspace=packages/mobile",
    "lint": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "typescript": "5.9.3"
  }
}
